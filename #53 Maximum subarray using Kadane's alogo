class Solution {
public:
    int maxSubArray(vector<int>& nums) {
        int max_so_far= nums[0];
        int curr_sum= nums[0];
        
        for(int i= 1; i < nums.size(); i++){
            curr_sum = max(nums[i], curr_sum + nums[i]);
            max_so_far = max(curr_sum, max_so_far);
        }
        return max_so_far;
    }
};
